{% extends 'base.html.twig' %}



{% block body %}
 {{ parent() }}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<header>
</header>
<section class="pt-150 cuerpo seccionfondologin">
<div class="cajalogin col-lg-3 col-md-6 col-8 offset-lg-4 offset-md-2 offset-1 h-50 border borderradius mt-5">
<h1 class="pt-3 text-center text-primary">Login</h1>
    <form action="{{ path('app_login') }}"  method="post">
        <label for="username" class="text-primary">Email:</label>
        <input type="text" id="username" class="w-100 mb-4 form-control borderradius" name="_username" placeholder="example@gmail.com" value="{{ last_username }}">

        <label for="password" class="text-primary">Password:</label>
        <input type="password" id="password" class="w-100 mb-4 form-control borderradius" placeholder="password" name="_password" >

        
        <input type="hidden" name="_target_path" value="/">

        <button type="submit" class="btn btn-primary mb-2 justify-content-center">Login</button>
    </form>
    <a href="{{ path('app_register') }}">¿Aún no tienes cuenta?</a>
</div>
</section>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}

