<section class="pt-150 cuerpo fondoseccion">
<div class=" w-50 offset-lg-3 offset-md-3 offset-sm-2">
<h2 class="text-center">LISTADO DE USUARIOS</h2>
</div>
<table class="table table-dark table-hover w-50 offset-lg-3 offset-md-3 offset-sm-2">
<thead>
<tr>
<th class="d-none">ID</th><th>NOMBRE</th><th>E-MAIL</th><th>DNI</th>
</tr>
</thead>
<tbody>
{% for usuario in usuarios %}
<tr id="{{usuario.id}}" class="filasjuego tr:hover">
<td class="d-none">{{usuario.id}}</td><td>{{usuario.apellido1 ~ ' ' ~ usuario.apellido2 ~ ', ' ~ usuario.nombre}}</td><td>{{usuario.email}}</td><td>{{usuario.dni}}</td>
</tr>
{% endfor %}
</tbody>
</table>

<div class="d-flex justify-content-between w-50 offset-lg-3 offset-md-3 offset-sm-2">

{% if totalpgs > 0 %}
     <ul class="pagination">
     {% if pagina != 1 %}
                  <li class="page-item"><a class="page-link" href="/admin/listausuario/{{pagina - 1}}">&laquo;</a></li>
    {% if pagina != 2 %}
                  <li class="page-item"><a class="page-link" href="/admin/listausuario/{{pagina - 2}}">{{pagina - 2}}</a></li>
    {% endif %}
                  <li class="page-item"><a class="page-link" href="/admin/listausuario/{{pagina - 1}}">{{pagina - 1}}</a></li>
     {% endif %}
                  
                  <li class="page-item active"><a class="page-link" href="/admin/listausuario/{{pagina}}">{{pagina}}</a></li>
                  
    {% if pagina != totalpgs %} 
                  <li class="page-item"><a class="page-link" href="/admin/listausuario/{{pagina + 1}}">{{pagina + 1}}</a></li>
    {% if pagina != (totalpgs - 1 )%}
                  <li class="page-item"><a class="page-link" href="/admin/listausuario/{{pagina + 2}}">{{pagina + 2}}</a></li>
    {% endif %}              
                  <li class="page-item"><a class="page-link" href="/admin/listausuario/{{pagina + 1}}">&raquo;</a></li>
    {% endif %}
    </ul>  
{% endif %}

{% if ( pagina * 5 ) >= totalreg %}
    <p>(De {{iniciolimit + 1}} a {{totalreg}}. Total, {{totalreg}} registros.)</p>
{% else %}
    <p>(De {{iniciolimit + 1}} a {{pagina * 5}}. Total, {{totalreg}} registros.)</p>
{% endif %}
</div>

</section>

