{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

{{ parent() }}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<header>

</header>
   <section class="pt-150 cuerpo seccionfondologin">

<div class=" cajalogin col-lg-3 col-md-6 col-8 offset-lg-4 offset-md-2 offset-1 border borderradius">
<h1 class="mt-3 text-center text-primary">Registro</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {label: 'Email *'}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Password *'}) }}
        {{ form_row(registrationForm.dni, {label: 'Dni *'}) }}
        {{ form_row(registrationForm.nombre, {label: 'Nombre *'}) }}
        {{ form_row(registrationForm.apellido1, {label: 'Apellido1 *'}) }}
        {{ form_row(registrationForm.apellido2) }}
        <button type="submit" class="ml-100 mt-3 btn btn-primary mb-3">Registrarme</button>
         <a href="{{ path('app_login') }}">Ya tengo cuenta</a>
    {{ form_end(registrationForm) }}

</div>

</section>
{% endblock %}