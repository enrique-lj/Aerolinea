{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        
        #contavion{
            position: absolute;
            left: 500px;
            top: 90px;
            border: 1px solid;
            width: 350px;
            height: 800px; 
        }
        #formuavion{
          position: absolute;
            left: 900px;
            top: 90px;
        }

         #leyenda{
         width: 150px;
         height: 150px;
         position: absolute;
         left: 0px;
         top: 300px;
         border: 1px solid black;
         display: flex;
         flex-direction:column;
         justify-content:space-between;
        }

         #marcobusiness{
         width: 40px;
         height: 40px;
         background-Color: #fad02d;
         }

         #marcoprioritario{
         width: 40px;
         height: 40px;
         background-Color: #bc7a5c;
         }

         #marcoregular{
         width: 40px;
         height: 40px;
         background-Color: #3f4e9b;  
         }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/vendors/jquery/avion.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
{{ parent() }}
   <section>
   <div id="contavion">
   </div>
   <article id="formuavion">
   
   <fieldset>
    <legend>Seleccione modelo: </legend>
    <label for="airbus" id="airbuslbl">Airbus</label>
    <input type="radio" name="radio-1" id="airbus" checked>
    <label for="boeing" id="boeinglbl">Boeing</label>
    <input type="radio" name="radio-1" id="boeing">
  </fieldset>



   <div id="leyenda">
   <div class="d-flex ">
   <label for="codigoavion">Business:</label>
   <div id="marcobusiness"></div>
   </div>
   <div class="d-flex">
   <label for="codigoavion">Prioritario:</label>
   <div id="marcoprioritario"></div>
   </div>
   <div class="d-flex">
   <label for="codigoavion">Regular:</label>
   <div id="marcoregular"></div>
   </div>
   </div>
  </article>
   </section>
{% endblock %}